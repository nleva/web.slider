<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:box="urn:import:com.sencha.gxt.widget.core.client.container"
	xmlns:sl="urn:import:ru.sendto.web.client.widget">
	<ui:style>
		.vp {
			padding: 0;
			margin: 0;
			position: absolute;
			left: 0;
			top:0;
		}
	</ui:style>

	<box:Viewport ui:field="viewport" styleName="{style.vp}">
		<sl:AbsoluteContainer  ui:field="slider">
			<sl:Slide ui:field="welcome" 	position="0 0" />
			<sl:Slide ui:field="contacts" 	position="940 0" />
			<sl:Slide ui:field="about" 		position="-940 0" />
			<sl:Slide ui:field="projects" 	position="0 740" />
			<sl:Slide ui:field="services" 	position="940 740" />
			<sl:Slide ui:field="products" 	position="-940 740" />
		</sl:AbsoluteContainer>
	</box:Viewport>
